<p style="color: green"><%= notice %></p>

<h1>Tasks</h1>

<div id="tasks">
  <% @tasks.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task %>
    </p>
  <% end %>
</div>

<%= link_to "New task", new_task_path %>
<div class="container mt-5">
    <div class="row">
        <div class="col">
            <h1>Tabela Kanban</h1>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    A Fazer
                </div>
                <ul class="list-group list-group-flush" data-controller="sortable" id="1">
                    <% @taskOne.each do |task| %>
                      <li class="list-group-item">
                        <%= link_to task.title, task, {id: task.id, class: "link-light"} %>
                      </li>
                    <% end %>
                </ul>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-header bg-warning">
                    Em Progresso
                </div>
                <ul class="list-group list-group-flush" data-controller="sortable" id="2">
                    <% @taskTwo.each do |task| %>
                      <li class="list-group-item">
                        <%= link_to task.title, task, {id: task.id, class: "link-light"} %>
                      </li>
                    <% end %>
                </ul>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-header bg-success text-white">
                    Conclu√≠das
                </div>
                <ul class="list-group list-group-flush" data-controller="sortable" id="3">
                    <% @taskTree.each do |task| %>
                      <li class="list-group-item">
                        <%= link_to task.title, task, {id: task.id, class: "link-light"}  %>
                      </li>
                    <% end %>
                </ul>
            </div>
        </div>
    </div>
</div>